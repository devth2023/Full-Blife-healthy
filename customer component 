                        <div class="flex justify-between text-green-600">
                            <span>‡∏™‡πà‡∏ß‡∏ô‡∏•‡∏î</span>
                            <span>-‡∏ø{{ number_format($order->discount_amount) }}</span>
                        </div>
                    @endif
                    
