@props(['order'])

@php
    $statusConfig = [
        'pending' => ['color' => 'yellow', 'label' => '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£', 'icon' => '‚è≥'],
