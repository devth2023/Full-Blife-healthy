{{-- resources/views/components/customer/orders/order-tracking.blade.php --}}
@props(['order'])

<div class="order-tracking">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠</h3>
    
    <div class="relative">
        <!-- Progress Line -->
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>
        
        <div class="space-y-6 relative">
            @php
                $steps = [
                    'pending' => ['icon' => '‚è≥', 'label' => '‡∏£‡∏≠‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£', 'description' => '‡∏£‡∏∞‡∏ö‡∏ö‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏•‡πâ‡∏ß'],
                    'confirmed' => ['icon' => '‚úÖ', 'label' => '‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠', 'description' => '‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô‡πÅ‡∏•‡∏∞‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠'],
                    'processing' => ['icon' => 'üõ†Ô∏è', 'label' => '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ï‡∏£‡∏µ‡∏¢‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤', 'description' => '‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ï‡∏£‡∏µ‡∏¢‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì'],
                    'shipped' => ['icon' => 'üöö', 'label' => '‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß', 'description' => '‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏ñ‡∏π‡∏Å‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß'],
                    'delivered' => ['icon' => 'üì¨', 'label' => '‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', 'description' => '‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏ñ‡∏π‡∏Å‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡∏ñ‡∏∂‡∏á‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏•‡πâ‡∏ß']
                ];
                
                $currentStepIndex = array_keys($steps);
                $currentStep = array_search($order->status, $currentStepIndex);
            @endphp

            @foreach($steps as $step => $config)
                @php
                    $isCompleted = array_search($step, $currentStepIndex) <= $currentStep;
                    $isCurrent = array_search($step, $currentStepIndex) === $currentStep;
                @endphp
                
                <div class="flex items-start space-x-4">
                    <!-- Step Icon -->
                    <div class="flex-shrink-0 relative">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm
                            {{ $isCompleted ? 'bg-green-500 text-white' : 'bg-gray-200 text-gray-500' }}
                            {{ $isCurrent ? 'ring-2 ring-green-300 ring-offset-2' : '' }}">
                            @if($isCompleted && !$isCurrent)
                                ‚úÖ
                            @else
                                {{ $config['icon'] }}
                            @endif
                        </div>
                    </div>

                    <!-- Step Content -->
                    <div class="flex-1 min-w-0 pb-6">
                        <div class="flex items-center space-x-2">
                            <h4 class="text-sm font-medium {{ $isCompleted ? 'text-green-600' : 'text-gray-500' }}">
                                {{ $config['label'] }}
                            </h4>
                            @if($isCurrent)
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                    ‡∏õ‡∏±‡∏à‡∏à‡∏∏‡∏ö‡∏±‡∏ô
                                </span>
                            @endif
                        </div>
                        
                        <p class="text-sm text-gray-500 mt-1">
                            {{ $config['description'] }}
                        </p>

                        <!-- Step Timeline -->
                        @if($isCompleted && $order->{"{$step}_at"})
                            <p class="text-xs text-gray-400 mt-2">
                                {{ $order->{"{$step}_at"}->format('d/m/Y H:i') }}
                            </p>
                        @endif

                        <!-- Tracking Info for Shipped Status -->
                        @if($step === 'shipped' && $isCompleted && $order->tracking_number)
                            <div class="mt-3 p-3 bg-blue-50 rounded-lg border border-blue-200">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <div class="text-sm font-medium text-blue-900">
                                            ‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏•‡∏Ç‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°: {{ $order->tracking_number }}
                                        </div>
                                        <div class="text-xs text-blue-700 mt-1">
                                            {{ $order->shipping_provider }}
                                        </div>
                                    </div>
                                    <a href="{{ $order->tracking_url }}" 
                                       target="_blank"
                                       class="btn btn-primary btn-sm">
                                        ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏û‡∏±‡∏™‡∏î‡∏∏
                                    </a>
                                </div>
                            </div>
                        @endif
                    </div>
                </div>
            @endforeach
        </div>
    </div>

    <!-- Estimated Delivery -->
    @if($order->status === 'shipped' && $order->estimated_delivery)
        <div class="mt-6 p-4 bg-orange-50 rounded-lg border border-orange-200">
            <div class="flex items-center">
                <span class="text-orange-500 mr-3">üìÖ</span>
                <div>
                    <div class="font-medium text-orange-900">‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡∏Å‡∏≤‡∏£‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡πÇ‡∏î‡∏¢‡∏õ‡∏£‡∏∞‡∏°‡∏≤‡∏ì</div>
                    <div class="text-sm text-orange-700">
                        {{ $order->estimated_delivery->format('d/m/Y') }}
                    </div>
                </div>
            </div>
        </div>
    @endif
</div>
```

