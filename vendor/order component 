5. Shipping Tracker (shipping-tracker.blade.php)

```blade
{{-- components/vendor/orders/shipping-tracker.blade.php --}}
@props(['order'])

<div class="shipping-tracker">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">üöö ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏Å‡∏≤‡∏£‡∏à‡∏±‡∏î‡∏™‡πà‡∏á</h3>

    @if($order->tracking_number)
    <div class="tracking-info mb-6">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
                <div class="flex items-center space-x-2">
                    <span class="text-blue-600">üì¶</span>
                    <span class="font-semibold">‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏•‡∏Ç‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°:</span>
                </div>
                <code class="bg-white px-2 py-1 rounded text-blue-600 font-mono">
                    {{ $order->tracking_number }}
                </code>
            </div>
            @if($order->shipping_carrier)
            <div class="text-sm text-blue-700">
                ‡∏ú‡∏π‡πâ‡πÉ‡∏´‡πâ‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£: {{ $order->shipping_carrier }}
            </div>
            @endif
        </div>
    </div>
    @endif

    <!-- Shipping Progress -->
    <div class="shipping-progress">
        <div class="progress-steps">
            @php
                $steps = [
                    'pending' => ['label' => '‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô', 'icon' => '‚è≥'],
                    'confirmed' => ['label' => '‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠', 'icon' => '‚úÖ'],
                    'processing' => ['label' => '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ï‡∏£‡∏µ‡∏¢‡∏°‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤', 'icon' => 'üè≠'],
                    'shipped' => ['label' => '‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß', 'icon' => 'üöö'],
                    'delivered' => ['label' => '‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à', 'icon' => 'üéâ']
                ];
                
                $currentStep = array_search($order->status, array_keys($steps));
            @endphp

            @foreach($steps as $status => $step)
                @php
                    $stepIndex = array_search($status, array_keys($steps));
                    $isCompleted = $stepIndex < $currentStep;
                    $isCurrent = $stepIndex === $currentStep;
                    $isFuture = $stepIndex > $currentStep;
                @endphp

                <div class="progress-step {{ $isCompleted ? 'step-completed' : ($isCurrent ? 'step-current' : 'step-future') }}">
                    <div class="step-icon">
                        @if($isCompleted)
                            ‚úÖ
                        @elseif($isCurrent)
                            ‚≠ê
                        @else
                            {{ $step['icon'] }}
                        @endif
                    </div>
                    <div class="step-content">
                        <div class="step-label">{{ $step['label'] }}</div>
                        @if($isCurrent && $order->status_updated_at)
                        <div class="step-time text-xs text-gray-500">
                            ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó: {{ $order->status_updated_at->format('d/m/Y H:i') }}
                        </div>
                        @endif
                    </div>
                    @if(!$loop.last)
                    <div class="step-connector"></div>
                    @endif
                </div>
            @endforeach
        </div>
    </div>

    <!-- Estimated Delivery -->
    @if($order->estimated_delivery)
    <div class="estimated-delivery mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center space-x-2">
            <span class="text-green-600">üìÖ</span>
            <div>
                <div class="font-semibold text-green-800">‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏à‡∏±‡∏î‡∏™‡πà‡∏á‡πÇ‡∏î‡∏¢‡∏õ‡∏£‡∏∞‡∏°‡∏≤‡∏ì</div>
                <div class="text-sm text-green-700">
                    {{ $order->estimated_delivery->format('d/m/Y') }}
                </div>
            </div>
        </div>
    </div>
    @endif

    <!-- Shipping Actions -->
    @if($order->status === 'shipped' && $order->tracking_number)
    <div class="shipping-actions mt-4 space-y-2">
        <button class="w-full btn btn-outline justify-center text-sm"
                onclick="window.open('https://track.thailandpost.com/track.aspx?trackNumber={{ $order->tracking_number }}', '_blank')">
            üîç ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ú‡πà‡∏≤‡∏ô Thailand Post
        </button>
        <button class="w-full btn btn-outline justify-center text-sm"
                wire:click="sendTrackingUpdate">
            üìß ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô‡∏Å‡∏≤‡∏£‡∏à‡∏±‡∏î‡∏™‡πà‡∏á
        </button>
    </div>
    @endif
</div>

<style>
.shipping-tracker {
    @apply bg-white rounded-lg border border-gray-200 p-6;
}

.progress-steps {
    @apply space-y-4;
}

.progress-step {
    @apply flex items-center;
}

.step-completed {
    @apply text-green-600;
}

