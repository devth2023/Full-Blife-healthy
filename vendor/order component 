                    @if($selectedPackage?->id === $package->id)
                        <div class="selected-badge">
                            ‚úÖ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏•‡πâ‡∏ß
                        </div>
                    @else
                        <button class="select-btn">
                            ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à
                        </button>
                    @endif
                </div>
            </div>
        @endforeach
    </div>

    <!-- Package Comparison -->
    <div class="package-comparison mt-6">
        <button class="comparison-toggle text-blue-600 text-sm font-medium">
            üîç ‡πÄ‡∏õ‡∏£‡∏µ‡∏¢‡∏ö‡πÄ‡∏ó‡∏µ‡∏¢‡∏ö‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
        </button>
        
        <div class="comparison-table hidden mt-4">
            <x-vendor.snowball.package-comparison :packages="$packages" />
