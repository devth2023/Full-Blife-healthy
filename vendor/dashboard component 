<script>
function toggleSubcategories(button) {
    const subcategories = button.closest('.category-item').querySelector('.subcategories');
    if (subcategories) {
        subcategories.classList.toggle('hidden');
        button.textContent = subcategories.classList.contains('hidden') ? '‚ñ∂' : '‚ñº';
    }
}
</script>
@endpush
