                    <!-- Price Adjustment -->
                    @if($bulkAction === 'adjust_price')
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö</label>
                            <select wire:model="priceAdjustmentType"
                                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                <option value="fixed">‡∏ï‡∏±‡πâ‡∏á‡∏£‡∏≤‡∏Ñ‡∏≤‡πÉ‡∏´‡∏°‡πà</option>
                                <option value="increase">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏≤‡∏Ñ‡∏≤</option>
                                <option value="decrease">‡∏•‡∏î‡∏£‡∏≤‡∏Ñ‡∏≤</option>
                                <option value="percentage_increase">‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏õ‡πá‡∏ô‡πÄ‡∏õ‡∏≠‡∏£‡πå‡πÄ‡∏ã‡πá‡∏ô‡∏ï‡πå</option>
                                <option value="percentage_decrease">‡∏•‡∏î‡πÄ‡∏õ‡πá‡∏ô‡πÄ‡∏õ‡∏≠‡∏£‡πå‡πÄ‡∏ã‡πá‡∏ô‡∏ï‡πå</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô</label>
                            <div class="relative">
                                <input type="number"
                                       wire:model="priceAdjustmentValue"
                                       min="0"
                                       step="0.01"
                                       class="w-full border border-gray-300 rounded-lg pl-8 pr-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="text-gray-500">‡∏ø</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if($priceAdjustmentType === 'percentage_increase' || $priceAdjustmentType === 'percentage_decrease')
                    <p class="text-sm text-gray-600">‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á: ‡∏£‡∏≤‡∏Ñ‡∏≤ 100 ‡∏ö‡∏≤‡∏ó {{ $priceAdjustmentType === 'percentage_increase' ? '‡πÄ‡∏û‡∏¥‡πà‡∏°' : '‡∏•‡∏î' }} {{ $priceAdjustmentValue }}% = ‡∏ø{{ $priceAdjustmentType === 'percentage_increase' ? 100 + (100 * $priceAdjustmentValue / 100) : 100 - (100 * $priceAdjustmentValue / 100) }}</p>
                    @endif
                    @endif

                    <!-- Stock Adjustment -->
                    @if($bulkAction === 'adjust_stock')
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö</label>
                            <select wire:model="stockAdjustmentType"
                                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                <option value="set">‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏™‡∏ï‡πá‡∏≠‡∏Å</option>
                                <option value="increase">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏™‡∏ï‡πá‡∏≠‡∏Å</option>
                                <option value="decrease">‡∏•‡∏î‡∏™‡∏ï‡πá‡∏≠‡∏Å</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô</label>
                            <input type="number"
                                   wire:model="stockAdjustmentValue"
                                   min="0"
                                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                        </div>
                    </div>
                    @endif

                    <!-- Discount Application -->
                    @if($bulkAction === 'apply_discount')
                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏™‡πà‡∏ß‡∏ô‡∏•‡∏î</label>
                                <select wire:model="discountType"
                                        class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                    <option value="percentage">‡πÄ‡∏õ‡∏≠‡∏£‡πå‡πÄ‡∏ã‡πá‡∏ô‡∏ï‡πå (%)</option>
                                    <option value="fixed">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏á‡∏¥‡∏ô (‡∏ö‡∏≤‡∏ó)</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏™‡πà‡∏ß‡∏ô‡∏•‡∏î</label>
                                <div class="relative">
                                    <input type="number"
                                           wire:model="discountValue"
                                           min="0"
                                           :max="discountType === 'percentage' ? 100 : null"
                                           step="0.01"
                                           class="w-full border border-gray-300 rounded-lg pl-8 pr-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500">{{ $discountType === 'percentage' ? '%' : '‡∏ø' }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">‡∏£‡∏∞‡∏¢‡∏∞‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡πà‡∏ß‡∏ô‡∏•‡∏î</label>
                            <div class="grid grid-cols-2 gap-4">
                                <input type="datetime-local"
                                       wire:model="discountStartDate"
                                       class="border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                <input type="datetime-local"
                                       wire:model="discountEndDate"
                                       class="border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                            </div>
                        </div>
                    </div>
                    @endif

                    <!-- Tags Management -->
                    @if(in_array($bulkAction, ['add_tags', 'remove_tags']))
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            @if($bulkAction === 'add_tags') ‡πÅ‡∏ó‡πá‡∏Å‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÄ‡∏û‡∏¥‡πà‡∏°
                            @else ‡πÅ‡∏ó‡πá‡∏Å‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö
                            @endif
                        </label>
                        <input type="text"
                               wire:model="bulkTags"
                               placeholder="‡∏Å‡∏£‡∏≠‡∏Å‡πÅ‡∏ó‡πá‡∏Å (‡∏Ñ‡∏±‡πà‡∏ô‡∏î‡πâ‡∏ß‡∏¢ comma)"
                               class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                        <p class="text-sm text-gray-500 mt-1">‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á: ‡πÅ‡∏ü‡∏ä‡∏±‡πà‡∏ô, ‡πÄ‡∏™‡∏∑‡πâ‡∏≠‡∏ú‡πâ‡∏≤, ‡πÉ‡∏´‡∏°‡πà</p>
                    </div>
                    @endif

                    <!-- Duplicate Options -->
                    @if($bulkAction === 'duplicate')
                    <div class="space-y-3">
                        <label class="flex items-center space-x-3">
                            <input type="checkbox" 
                                   wire:model="duplicateWithImages"
                                   class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span class="text-sm text-gray-700">‡∏™‡∏≥‡πÄ‡∏ô‡∏≤‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤</span>
                        </label>
                        <label class="flex items-center space-x-3">
                            <input type="checkbox" 
                                   wire:model="duplicateWithVariants"
                                   class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span class="text-sm text-gray-700">‡∏™‡∏≥‡πÄ‡∏ô‡∏≤‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤</span>
                        </label>
                        <label class="flex items-center space-x-3">
                            <input type="checkbox" 
                                   wire:model="duplicateAsDraft"
                                   class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span class="text-sm text-gray-700">‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÄ‡∏õ‡πá‡∏ô‡πÅ‡∏ö‡∏ö‡∏£‡πà‡∏≤‡∏á</span>
                        </label>
                    </div>
                    @endif

                    <!-- Selected Products Preview -->
                    <div class="bg-gray-50 rounded-lg p-3">
                        <h4 class="text-sm font-medium text-gray-700 mb-2">‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏ó‡∏µ‡πà‡∏à‡∏∞‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£:</h4>
                        <div class="max-h-32 overflow-y-auto space-y-1">
                            @foreach($selectedProductsPreview as $product)
                            <div class="flex items-center space-x-2 text-sm text-gray-600">
                                <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                                <span class="truncate">{{ $product['name'] }}</span>
                            </div>
                            @endforeach
                            @if(count($selectedProducts) > 5)
                            <div class="text-xs text-gray-500 text-center">
                                ‡πÅ‡∏•‡∏∞‡∏≠‡∏µ‡∏Å {{ count($selectedProducts) - 5 }} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£...
                            </div>
                            @endif
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-end space-x-3 p-6 border-t border-gray-200 bg-gray-50">
                <button type="button"
                        @click="show = false; $wire.cancelBulkAction()"
                        class="btn btn-outline">
                    ‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å
                </button>
                <button type="button"
                        wire:click="confirmBulkAction"
                        class="btn {{ in_array($bulkAction, ['delete', 'remove_snowball', 'remove_from_category']) ? 'btn-danger' : 'btn-primary' }}"
                        wire:loading.attr="disabled">
                    <span wire:loading.remove>
                        @if($bulkAction === 'delete')
                        üóëÔ∏è ‡∏•‡∏ö‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤
                        @elseif($bulkAction === 'duplicate')
                        ‚éò ‡∏ó‡∏≥‡∏™‡∏≥‡πÄ‡∏ô‡∏≤
                        @else
                        ‚úÖ ‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£
                        @endif
                    </span>
                    <span wire:loading>‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏£‡∏∞‡∏°‡∏ß‡∏•‡∏ú‡∏•...</span>
                </button>
            </div>
        </div>
    </div>
    @endif

    <!-- Loading Overlay -->
    @if($processingBulkAction)
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 text-center">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
            <p class="text-gray-700">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£‡∏Å‡∏±‡∏ö {{ count($selectedProducts) }} ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£...</p>
            <p class="text-sm text-gray-500 mt-1">‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏≠‡∏™‡∏±‡∏Å‡∏Ñ‡∏£‡∏π‡πà</p>
        </div>
    </div>
    @endif
</div>
@endif

<style>
