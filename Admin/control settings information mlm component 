5. Role Assigner Component

```blade
{{-- components/admin/users/role-assigner.blade.php --}}
@props([
    'user',
    'editable' => false
])

@php
    $roleColors = [
        'customer' => 'bg-blue-100 text-blue-800',
        'seller' => 'bg-green-100 text-green-800', 
        'admin' => 'bg-purple-100 text-purple-800'
    ];
    
    $roleIcons = [
        'customer' => 'üõí',
        'seller' => 'üè™',
        'admin' => 'üëë'
    ];
    
    $roleLabels = [
        'customer' => '‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤',
        'seller' => '‡∏ú‡∏π‡πâ‡∏Ç‡∏≤‡∏¢',
        'admin' => '‡∏ú‡∏π‡πâ‡∏î‡∏π‡πÅ‡∏•'
    ];
@endphp

@if($editable)
<div class="role-assigner">
    <label class="block text-sm font-medium text-gray-700 mb-2">‡∏ö‡∏ó‡∏ö‡∏≤‡∏ó</label>
    <div class="flex flex-wrap gap-2">
        @foreach(['customer', 'seller', 'admin'] as $role)
        <label class="inline-flex items-center">
            <input 
                type="radio" 
                name="role" 
                value="{{ $role }}"
                wire:model="role"
                class="sr-only">
            <span class="cursor-pointer px-3 py-2 border rounded-lg text-sm font-medium transition-colors
                {{ $role === $user->role ? 'border-blue-500 bg-blue-50 text-blue-700 ring-2 ring-blue-200' : 'border-gray-300 text-gray-700 hover:bg-gray-50' }}">
                <span class="mr-2">{{ $roleIcons[$role] }}</span>
                {{ $roleLabels[$role] }}
            </span>
        </label>
        @endforeach
    </div>
    @error('role') <span class="text-red-500 text-sm mt-1">{{ $message }}</span> @enderror
</div>
@else
<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{ $roleColors[$user->role] }}">
    <span class="mr-1">{{ $roleIcons[$user->role] }}</span>
    {{ $roleLabels[$user->role] }}
</span>
@endif
```

