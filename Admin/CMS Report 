                <div class="stat-box text-center p-4 border rounded">
                    <div class="text-2xl font-bold text-red-600">{{ $stats['down'] }}</div>
                    <div class="text-sm text-gray-600">‡∏°‡∏µ‡∏õ‡∏±‡∏ç‡∏´‡∏≤</div>
                </div>
                <div class="stat-box text-center p-4 border rounded">
                    <div class="text-2xl font-bold text-yellow-600">{{ $stats['degraded'] }}</div>
                    <div class="text-sm text-gray-600">‡∏õ‡∏£‡∏∞‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡∏†‡∏≤‡∏û‡∏ï‡πà‡∏≥</div>
                </div>
                <div class="stat-box text-center p-4 border rounded">
                    <div class="text-2xl font-bold text-blue-600">{{ $stats['avg_response'] }}ms</div>
                    <div class="text-sm text-gray-600">‡∏ï‡∏≠‡∏ö‡∏™‡∏ô‡∏≠‡∏á‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function apiStatusMonitor() {
    return {
        lastUpdate: '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...',
        
        startMonitoring() {
            this.updateTimestamp();
            // Refresh every 30 seconds
            setInterval(() => {
                this.$wire.refreshStatus();
                this.updateTimestamp();
            }, 30000);
        },
        
        updateTimestamp() {
            const now = new Date();
            this.lastUpdate = `‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ó: ${now.toLocaleTimeString('th-TH')}`;
        },
        
        refreshAll() {
            this.$wire.refreshStatus();
            this.updateTimestamp();
        },
        
        testApi(apiId) {
            this.$wire.testApi(apiId);
        },
        
        viewApiLogs(apiId) {
            this.$wire.viewApiLogs(apiId);
        }
    }
}
</script>
```

