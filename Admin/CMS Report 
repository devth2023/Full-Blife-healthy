                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function seoManager() {
    return {
        get metaTitleLength() {
            return this.$wire.get('seo.meta_title')?.length || 0;
        },
        
        get metaDescriptionLength() {
            return this.$wire.get('seo.meta_description')?.length || 0;
        }
    }
}
</script>
