                        label: '‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ',
                        data: @json($charts['revenue']['data']),
                        borderColor: '#10B981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
