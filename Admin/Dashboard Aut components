                @endif
                <span class="text-sm text-gray-500 ml-1">‡∏à‡∏≤‡∏Å‡πÄ‡∏î‡∏∑‡∏≠‡∏ô‡∏ó‡∏µ‡πà‡πÅ‡∏•‡πâ‡∏ß</span>
            </div>
            @endif
        </div>
        
        <div class="{{ $colorClasses[$color]['bg'] }} p-3 rounded-lg">
            <div class="{{ $colorClasses[$color]['icon'] }}">
                {!! $icons[$icon] ?? $icons['chart-bar'] !!}
            </div>
        </div>
    </div>
</div>
