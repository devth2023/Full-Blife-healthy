            <!-- Date Range -->
            <div>
                <label for="date_range" class="block text-sm font-medium text-gray-700 mb-1">‡∏ä‡πà‡∏ß‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</label>
                <select id="date_range" wire:model="dateRange" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
                    <option value="today">‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ</option>
                    <option value="week">‡∏™‡∏±‡∏õ‡∏î‡∏≤‡∏´‡πå‡∏ô‡∏µ‡πâ</option>
                    <option value="month">‡πÄ‡∏î‡∏∑‡∏≠‡∏ô‡∏ô‡∏µ‡πâ</option>
                    <option value="last_month">‡πÄ‡∏î‡∏∑‡∏≠‡∏ô‡∏ó‡∏µ‡πà‡πÅ‡∏•‡πâ‡∏ß</option>
                    <option value="custom">‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡πÄ‡∏≠‡∏á</option>
                </select>
            </div>

            <!-- Status Filter -->
            <div>
                <label for="status" class="block text-sm font-medium text-gray-700 mb-1">‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞</label>
                <select id="status" wire:model="statusFilter" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
                    <option value="all">‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î</option>
                    <option value="pending">‡∏£‡∏≠‡∏Å‡∏≤‡∏£‡∏à‡πà‡∏≤‡∏¢</option>
                    <option value="paid">‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß</option>
                    <option value="cancelled">‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å</option>
                </select>
            </div>

            <!-- Package Filter -->
            <div>
                <label for="package" class="block text-sm font-medium text-gray-700 mb-1">‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à</label>
                <select id="package" wire:model="packageFilter" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
                    <option value="all">‡∏ó‡∏∏‡∏Å‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à</option>
                    @foreach($packages as $package)
                    <option value="{{ $package->id }}">{{ $package->name }}</option>
                    @endforeach
                </select>
            </div>

            <!-- Vendor Filter -->
            <div>
                <label for="vendor" class="block text-sm font-medium text-gray-700 mb-1">‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤</label>
                <select id="vendor" wire:model="vendorFilter" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
                    <option value="all">‡∏ó‡∏∏‡∏Å‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤</option>
                    @foreach($vendors as $vendor)
                    <option value="{{ $vendor->id }}">{{ $vendor->shop_name }}</option>
                    @endforeach
                </select>
            </div>
        </div>

        <!-- Custom Date Range -->
        @if($dateRange === 'custom')
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
            <div>
                <label for="start_date" class="block text-sm font-medium text-gray-700 mb-1">‡∏à‡∏≤‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</label>
                <input type="date" id="start_date" wire:model="startDate" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
                <label for="end_date" class="block text-sm font-medium text-gray-700 mb-1">‡∏ñ‡∏∂‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</label>
                <input type="date" id="end_date" wire:model="endDate" class="block w-full border border-gray-300 rounded-lg py-2 px-3 focus:ring-blue-500 focus:border-blue-500">
            </div>
        </div>
        @endif
    </div>

    <!-- Commission Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏¢‡∏≠‡∏î‡∏Ç‡∏≤‡∏¢</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏Ñ‡∏≠‡∏°‡∏°‡∏¥‡∏ä‡∏ä‡∏±‡πà‡∏ô</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">‡∏Å‡∏≤‡∏£‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach($commissions as $commission)
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm text-gray-900">
                        {{ $commission->created_at->format('d/m/Y H:i') }}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        {{ $commission->vendor->shop_name }}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        #{{ $commission->order->order_code }}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        {{ $commission->package->name }}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        ‡∏ø{{ number_format($commission->sale_amount) }}
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-green-600">
                        ‡∏ø{{ number_format($commission->commission_amount) }}
                    </td>
                    <td class="px-6 py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                            {{ $commission->status === 'paid' ? 'bg-green-100 text-green-800' : 
                               ($commission->status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') }}">
                            {{ $commission->status_text }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-sm font-medium">
                        @if($commission->status === 'pending')
                        <button 
                            wire:click="markAsPaid({{ $commission->id }})"
                            class="text-green-600 hover:text-green-900">
                            ‡∏ó‡∏≥‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏´‡∏°‡∏≤‡∏¢‡∏ß‡πà‡∏≤‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß
                        </button>
                        @endif
                    </td>
                </tr>
                @endforeach
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if($commissions->hasPages())
    <div class="mt-6">
        {{ $commissions->links() }}
    </div>
    @endif
</div>
```

