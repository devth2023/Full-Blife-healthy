                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        {{ $package->is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' }}">
                        {{ $package->is_active ? '‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô' : '‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô' }}
                    </span>
                </div>

                <!-- Formula Preview -->
                <div class="mt-3 p-2 bg-gray-50 rounded border border-gray-200">
                    <div class="text-xs text-gray-600 font-mono">
                        {{ $package->formula }}
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="px-4 py-3 bg-gray-50 rounded-b-lg">
                <div class="flex space-x-2">
                    <button 
                        wire:click="editPackage({{ $package->id }})"
                        class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç
                    </button>
                    
                    <button 
                        wire:click="togglePackageStatus({{ $package->id }})"
                        class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            @if($package->is_active)
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            @else
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            @endif
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        @endforeach

        <!-- Add New Package Card -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-dashed border-gray-300 hover:border-purple-400 transition-colors">
            <button 
                wire:click="createPackage"
                class="w-full h-full p-8 flex flex-col items-center justify-center text-gray-400 hover:text-purple-500">
                <svg class="w-12 h-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                <span class="text-lg font-medium">‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à‡πÉ‡∏´‡∏°‡πà</span>
                <span class="text-sm mt-1">‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏û‡πá‡∏Ñ‡πÄ‡∏Å‡∏à MLM ‡πÉ‡∏´‡∏°‡πà</span>
            </button>
        </div>
    </div>

    <!-- Package Form Modal -->
    @if($showPackageForm)
    <x-admin.snowball.package-form :package="$editingPackage" />
    @endif
</div>
```

