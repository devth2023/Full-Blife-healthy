<script>
// Bulk selection
document.addEventListener('DOMContentLoaded', function() {
    const selectAll = document.querySelector('thead input[type="checkbox"]');
    const productCheckboxes = document.querySelectorAll('.product-checkbox');
    
    selectAll?.addEventListener('change', function() {
        productCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });
});
</script>
```

3. Product Approval Component

```blade
{{-- components/admin/products/product-approval.blade.php --}}
@props(['pendingProducts' => []])

<div class="product-approval">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥</h1>
                <p class="text-gray-600 mt-1">‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÅ‡∏•‡∏∞‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á‡πÄ‡∏Ç‡πâ‡∏≤‡∏°‡∏≤‡πÉ‡∏´‡∏°‡πà</p>
            </div>
            <div class="mt-4 lg:mt-0">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                    {{ count($pendingProducts) }} ‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡∏£‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
                </span>
            </div>
        </div>
    </div>

    @if(count($pendingProducts) > 0)
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach($pendingProducts as $product)
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
            <!-- Product Image -->
            <div class="h-48 bg-gray-200 rounded-t-lg overflow-hidden">
                <img src="{{ $product->thumbnail_url ?? asset('images/placeholders/product-placeholder.jpg') }}" 
                     alt="{{ $product->name }}"
                     class="w-full h-full object-cover">
            </div>

            <!-- Product Info -->
            <div class="p-4">
                <div class="flex items-start justify-between mb-2">
                    <h3 class="text-lg font-medium text-gray-900 line-clamp-2">{{ $product->name }}</h3>
                    <span class="text-lg font-bold text-green-600">‡∏ø{{ number_format($product->price) }}</span>
                </div>

                <div class="space-y-2 text-sm text-gray-600">
                    <div class="flex justify-between">
                        <span>‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤:</span>
                        <span class="font-medium">{{ $product->vendor->shop_name }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà:</span>
                        <span class="font-medium">{{ $product->category->name ?? '-' }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span>‡∏™‡∏ï‡πá‡∏≠‡∏Å:</span>
                        <span class="font-medium {{ $product->stock_quantity > 0 ? 'text-green-600' : 'text-red-600' }}">
                            {{ $product->stock_quantity }}
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span>‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏™‡πà‡∏á:</span>
                        <span class="font-medium">{{ $product->created_at->format('d/m/Y H:i') }}</span>
                    </div>
                </div>

                <!-- Snowball Info -->
                @if($product->snowball_settings)
                <div class="mt-3 p-2 bg-purple-50 rounded border border-purple-200">
                    <div class="flex items-center text-sm text-purple-800">
                        <span class="mr-1">‚ùÑÔ∏è</span>
                        <span>‡πÄ‡∏õ‡∏¥‡∏î‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô Snowball - {{ $product->snowball_settings->package->name }}</span>
                    </div>
                </div>
                @endif

                <!-- Product Description -->
                @if($product->description)
                <div class="mt-3">
                    <p class="text-sm text-gray-600 line-clamp-2">{{ $product->description }}</p>
                </div>
                @endif
            </div>

            <!-- Actions -->
            <div class="px-4 py-3 bg-gray-50 rounded-b-lg">
                <div class="flex space-x-2">
                    <button 
                        wire:click="approveProduct({{ $product->id }})"
                        class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        ‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥
                    </button>
                    
                    <button 
                        wire:click="showRejectModal({{ $product->id }})"
                        class="flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        ‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò
                    </button>
                    
                    <a href="{{ route('admin.products.show', $product) }}" 
                       class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
