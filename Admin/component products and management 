                        <div class="font-medium text-green-600">‡∏ø{{ number_format($product->price) }}</div>
                        @if($product->compare_price)
                        <div class="text-xs text-gray-500 line-through">‡∏ø{{ number_format($product->compare_price) }}</div>
                        @endif
                    </div>
                </td>

                <!-- Stock -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="flex items-center">
                        <span class="{{ $product->stock_quantity > 10 ? 'text-green-600' : ($product->stock_quantity > 0 ? 'text-orange-600' : 'text-red-600') }} font-medium">
                            {{ $product->stock_quantity }}
                        </span>
                        @if($product->stock_quantity <= 10 && $product->stock_quantity > 0)
                        <span class="ml-1 text-xs text-orange-600">(‡∏ô‡πâ‡∏≠‡∏¢)</span>
                        @endif
                    </div>
                </td>

                <!-- Sales -->
