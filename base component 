function authModal() {
    return {
        show: @json($show),
        currentView: @json($initialView),
        selectedRole: null,
        roleLabels: {
            customer: 'ลูกค้า',
            vendor: 'ผู้ขาย',
            admin: 'ผู้ดูแลระบบ'
        },
        
        init() {
            // Listen for auth modal triggers
            window.addEventListener('open-auth-modal', (event) => {
                this.show = true;
                this.currentView = event.detail.view || 'role';
                this.selectedRole = event.detail.role || null;
            });
        },
        
        closeModal() {
            this.show = false;
            this.currentView = 'role';
            this.selectedRole = null;
        },
        
        selectRole(role) {
            this.selectedRole = role;
            this.showView('login');
        },
        
        showView(view) {
            this.currentView = view;
        }
    }
}
</script>
