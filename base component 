```blade
{{-- components/global/confirmation-modal.blade.php --}}
@props([
    'show' => false,
    'title' => 'ยืนยันการดำเนินการ',
    'message' => 'คุณแน่ใจที่จะดำเนินการนี้หรือไม่?',
    'confirmText' => 'ยืนยัน',
    'cancelText' => 'ยกเลิก',
    'type' => 'warning', // info, warning, danger, success
    'confirmAction' => null,
    'cancelAction' => null,
    'loading' => false,
    'size' => 'md' // sm, md, lg
])

@php
    $typeConfig = [
        'info' => [
            'icon' => 'images/icons/system/info.png',
            'iconBg' => 'bg-blue-100',
            'iconColor' => 'text-blue-600',
            'button' => 'bg-blue-600 hover:bg-blue-700'
        ],
        'warning' => [
            'icon' => 'images/icons/system/warning.png',
            'iconBg' => 'bg-yellow-100',
            'iconColor' => 'text-yellow-600',
            'button' => 'bg-yellow-600 hover:bg-yellow-700'
        ],
        'danger' => [
            'icon' => 'images/icons/system/error.png',
            'iconBg' => 'bg-red-100',
            'iconColor' => 'text-red-600',
            'button' => 'bg-red-600 hover:bg-red-700'
        ],
        'success' => [
            'icon' => 'images/icons/system/success.png',
            'iconBg' => 'bg-green-100',
            'iconColor' => 'text-green-600',
            'button' => 'bg-green-600 hover:bg-green-700'
        ]
    ];

    $sizeConfig = [
        'sm' => 'max-w-sm',
        'md' => 'max-w-md',
        'lg' => 'max-w-lg'
    ];

    $config = $typeConfig[$type];
@endphp

<div x-data="confirmationModal()" 
     x-show="show" 
     x-cloak
     class="fixed inset-0 z-50 overflow-y-auto"
     x-on:keydown.escape="closeModal">

    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
         x-show="show"
         x-transition:enter="ease-out duration-300"
         x-transition:enter-start="opacity-0"
         x-transition:enter-end="opacity-100"
         x-transition:leave="ease-in duration-200"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0">
    </div>

    <!-- Modal -->
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-white rounded-xl shadow-xl {{ $sizeConfig[$size] }} w-full"
             x-show="show"
             x-transition:enter="ease-out duration-300"
             x-transition:enter-start="opacity-0 scale-95"
             x-transition:enter-end="opacity-100 scale-100"
             x-transition:leave="ease-in duration-200"
             x-transition:leave-start="opacity-100 scale-100"
             x-transition:leave-end="opacity-0 scale-95">
            
            <!-- Header -->
            <div class="flex items-center p-6 border-b border-gray-200">
                <div class="flex items-center justify-center w-10 h-10 rounded-full {{ $config['iconBg'] }} {{ $config['iconColor'] }} mr-3">
                    <img src="{{ asset($config['icon']) }}" alt="" class="w-5 h-5">
                </div>
                <h3 class="text-lg font-semibold text-gray-900">{{ $title }}</h3>
            </div>

            <!-- Body -->
            <div class="p-6">
                <p class="text-gray-700">{{ $message }}</p>
            </div>

            <!-- Footer -->
            <div class="flex justify-end space-x-3 p-6 border-t border-gray-200">
                <button type="button"
                        @click="cancel"
                        class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
                        :disabled="loading">
                    {{ $cancelText }}
                </button>
                
                <button type="button"
                        @click="confirm"
                        class="px-4 py-2 text-white rounded-lg transition-colors {{ $config['button'] }}"
                        :disabled="loading">
                    <div class="flex items-center">
                        <template x-if="loading">
                            <img src="{{ asset('images/loading/spinner.gif') }}" alt="กำลังโหลด" class="w-4 h-4 mr-2">
                        </template>
                        {{ $confirmText }}
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function confirmationModal() {
    return {
        show: @json($show),
        loading: @json($loading),
        init() {
            // Listen for confirmation modal triggers
            window.addEventListener('open-confirmation-modal', (event) => {
                this.show = true;
                this.confirmAction = event.detail.confirmAction;
                this.cancelAction = event.detail.cancelAction;
            });
        },
        closeModal() {
            this.show = false;
            this.loading = false;
        },
        cancel() {
            if (this.cancelAction) {
                this.$dispatch(this.cancelAction);
            }
            this.closeModal();
        },
        confirm() {
            this.loading = true;
            if (this.confirmAction) {
                this.$dispatch(this.confirmAction);
            }
            // Note: The parent component should handle closing the modal after the action completes
        }
    }
}
</script>
```

14. Notification Toast Component

```blade
{{-- components/global/notification-toast.blade.php --}}
@props([
    'id' => null,
    'type' => 'info', // success, error, warning, info
    'title' => null,
    'message' => '',
    'duration' => 5000, // ms, 0 for persistent
    'position' => 'top-right', // top-right, top-left, bottom-right, bottom-left
    'showClose' => true,
    'action' => null,
    'actionLabel' => null
])

@php
    $typeConfig = [
        'success' => [
            'icon' => 'images/icons/system/success.png',
            'bg' => 'bg-green-50 border-green-200',
            'text' => 'text-green-800',
            'iconBg' => 'bg-green-100'
        ],
        'error' => [
            'icon' => 'images/icons/system/error.png',
            'bg' => 'bg-red-50 border-red-200',
            'text' => 'text-red-800',
            'iconBg' => 'bg-red-100'
        ],
        'warning' => [
            'icon' => 'images/icons/system/warning.png',
            'bg' => 'bg-yellow-50 border-yellow-200',
            'text' => 'text-yellow-800',
            'iconBg' => 'bg-yellow-100'
        ],
        'info' => [
            'icon' => 'images/icons/system/info.png',
            'bg' => 'bg-blue-50 border-blue-200',
            'text' => 'text-blue-800',
            'iconBg' => 'bg-blue-100'
        ]
    ];

    $positionClasses = [
        'top-right' => 'top-4 right-4',
        'top-left' => 'top-4 left-4',
        'bottom-right' => 'bottom-4 right-4',
        'bottom-left' => 'bottom-4 left-4'
    ];

    $config = $typeConfig[$type];
@endphp

<div x-data="notificationToast()"
     x-show="show"
     x-transition:enter="transform ease-out duration-300 transition"
     x-transition:enter-start="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
     x-transition:enter-end="translate-y-0 opacity-100 sm:translate-x-0"
     x-transition:leave="transition ease-in duration-100"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed {{ $positionClasses[$position] }} z-50 max-w-sm w-full">
    
    <div class="rounded-lg shadow-lg border {{ $config['bg'] }} {{ $config['text'] }} overflow-hidden">
        <div class="p-4">
            <div class="flex items-start">
                <!-- Icon -->
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 rounded-full {{ $config['iconBg'] }} flex items-center justify-center">
                        <img src="{{ asset($config['icon']) }}" alt="" class="w-4 h-4">
                    </div>
                </div>

                <!-- Content -->
                <div class="ml-3 flex-1">
                    @if($title)
                        <h4 class="font-medium">{{ $title }}</h4>
                    @endif
                    <p class="text-sm mt-1">{{ $message }}</p>

                    @if($action && $actionLabel)
                        <div class="mt-2">
                            <button type="button" 
                                    @click="handleAction"
                                    class="text-sm font-medium underline hover:no-underline">
                                {{ $actionLabel }}
                            </button>
                        </div>
                    @endif
                </div>

                <!-- Close Button -->
                @if($showClose)
                    <div class="ml-4 flex-shrink-0">
                        <button type="button" 
                                @click="close"
                                class="rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none">
                            <img src="{{ asset('images/icons/system/close.png') }}" alt="ปิด" class="w-4 h-4">
                        </button>
                    </div>
                @endif
            </div>
        </div>

        <!-- Progress Bar -->
        @if($duration > 0)
            <div class="h-1 bg-gray-200">
                <div class="h-full {{ $config['iconBg'] }} transition-all duration-100 ease-linear"
                     x-ref="progressBar"
                     :style="`width: ${progress}%`">
                </div>
            </div>
        @endif
    </div>
</div>

<script>
function notificationToast() {
    return {
        show: false,
        progress: 100,
        duration: @json($duration),
        timer: null,
        progressTimer: null,
        
        init() {
            this.show = true;
            
            // Auto-hide if duration is set
            if (this.duration > 0) {
                this.startAutoHide();
            }
            
            // Listen for close events
            this.$watch('show', (value) => {
                if (!value) {
                    this.cleanup();
                }
            });
        },
        
        startAutoHide() {
            const interval = 50; // Update every 50ms
            const steps = this.duration / interval;
            const decrement = 100 / steps;
            
            this.progressTimer = setInterval(() => {
                this.progress -= decrement;
                if (this.progress <= 0) {
                    this.close();
                }
            }, interval);
            
            this.timer = setTimeout(() => {
                this.close();
            }, this.duration);
        },
        
        handleAction() {
            @if($action)
                this.$dispatch('{{ $action }}');
            @endif
            this.close();
        },
        
        close() {
            this.show = false;
            this.cleanup();
        },
        
        cleanup() {
            if (this.timer) {
                clearTimeout(this.timer);
            }
            if (this.progressTimer) {
                clearInterval(this.progressTimer);
            }
        }
    }
}
</script>
```

15. Toast Container Component (Additional - สำหรับจัดการหลาย toast)

```blade
{{-- components/global/toast-container.blade.php --}}
@props([
    'position' => 'top-right'
])

@php
    $positionClasses = [
        'top-right' => 'top-0 right-0',
        'top-left' => 'top-0 left-0',
        'bottom-right' => 'bottom-0 right-0',
        'bottom-left' => 'bottom-0 left-0'
    ];
@endphp

<div class="fixed {{ $positionClasses[$position] }} z-50 p-4 space-y-3 max-w-sm w-full"
     x-data="toastContainer()"
     x-show="toasts.length > 0">
    
    <template x-for="toast in toasts" :key="toast.id">
        <div class="toast-item">
            <x-global.notification-toast
                :title="toast.title"
                :message="toast.message"
                :type="toast.type"
                :duration="toast.duration"
                :action="toast.action"
                :action-label="toast.actionLabel"
                x-show="toast.visible"
                x-transition:enter="transform ease-out duration-300 transition"
                x-transition:enter-start="translate-y-2 opacity-0"
                x-transition:enter-end="translate-y-0 opacity-100"
                x-transition:leave="transition ease-in duration-100"
                x-transition:leave-start="opacity-100"
                x-transition:leave-end="opacity-0"
                @close="removeToast(toast.id)" />
        </div>
    </template>
</div>

<script>
function toastContainer() {
    return {
        toasts: [],
        nextId: 1,
        
        init() {
            // Listen for toast notifications
            window.addEventListener('show-toast', (event) => {
                this.addToast(event.detail);
            });
        },
        
        addToast(toastData) {
            const toast = {
                id: this.nextId++,
                visible: true,
                ...toastData
            };
            
            this.toasts.push(toast);
            
            // Auto-remove after duration
            if (toast.duration > 0) {
                setTimeout(() => {
                    this.removeToast(toast.id);
                }, toast.duration);
            }
        },
        
        removeToast(toastId) {
            const toastIndex = this.toasts.findIndex(t => t.id === toastId);
            if (toastIndex !== -1) {
                this.toasts[toastIndex].visible = false;
                
                // Remove from array after transition
                setTimeout(() => {
                    this.toasts = this.toasts.filter(t => t.id !== toastId);
                }, 100);
            }
        }
    }
}
</script>
```

